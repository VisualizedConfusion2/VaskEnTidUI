@page
@model VaskEnTidUI.Pages.Manage_ProfileModel
@{
    ViewData["Title"] = "Opdater Bruger";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <h2 class="text-center mb-4">Opdater Bruger</h2>

            @if (!string.IsNullOrEmpty(Model.SuccessMessage))
            {
                <div class="alert alert-success">@Model.SuccessMessage</div>
            }

            @if (!string.IsNullOrEmpty(Model.ErrorMessage))
            {
                <div class="alert alert-danger">@Model.ErrorMessage</div>
            }

            <form method="post">
                <div class="form-group mb-3">
                    <label asp-for="Name" class="form-label">Navn</label>
                    <input asp-for="Name" class="form-control" />
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Phone" class="form-label">Telefonnummer</label>
                    <input asp-for="Phone" class="form-control" />
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Email" class="form-label">Email</label>
                    <input asp-for="Email" type="email" class="form-control" />
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Password" class="form-label">Adgangskode</label>
                    <input asp-for="Password" type="password" class="form-control" />
                </div>

                <button type="submit" class="btn btn-primary w-100">Opdater Bruger</button>
            </form>
        </div>
    </div>
</div>
